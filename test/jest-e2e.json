{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/common/(.*)": "<rootDir>/../packages/common/$1",
    "@app/nestjs/(.*)": "<rootDir>/../packages/nestjs/$1",
    "@app/angular/(.*)": "<rootDir>/../packages/angular/$1"
  }
}
